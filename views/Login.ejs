<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <title>
        <%= title %>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="img/favicon/favicon.ico">
    <link rel="icon" type="image/png" sizes="16x16" href="img/favicon/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="img/favicon/favicon-32x32.png">
    <link rel="apple-touch-icon" sizes="180x180" href="img/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="192x192" href="img/favicon/android-chrome-192x192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="img/favicon/android-chrome-512x512.png">
    <link rel="manifest" href="img/favicon/site.webmanifest">

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="libraries/css/Bootstrap-5.3.3.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="css/login.css">
    <link rel="stylesheet" href="css/global.css">
</head>

<body>
    <!-- Floating Music Notes -->
    <i class="music-note fas fa-music"></i>
    <i class="music-note fas fa-guitar"></i>
    <i class="music-note fas fa-microphone"></i>
    <i class="music-note fas fa-headphones"></i>

    <!-- Loading Overlay -->
    <div class="loading" id="loadingOverlay">
        <div class="spinner"></div>
    </div>

    <div class="login-container">
        <div class="login-card">
            <!-- Header -->
            <div class="login-header">
                <h1 class="login-title">
                    <i class="fas fa-sign-in-alt"></i> Bienvenido
                </h1>
                <p class="login-subtitle">Accede a tu cuenta de eventos</p>
            </div>

            <!-- Logo -->
            <div class="logo-container">
                <img src="img/logos/logo.jpg" alt="Conciertos y Eventos COL" class="login-logo" />
                <div class="banner-text">
                    <i class="fas fa-flag"></i> Conciertos y Eventos COL
                </div>
            </div>

            <!-- Form -->
            <form id="loginForm" class="needs-validation" novalidate>
                <div class="form-group">
                    <label for="usuario" class="form-label">
                        <i class="fas fa-user"></i> Usuario
                    </label>
                    <input type="text" class="form-control" id="usuario" placeholder="Ingresa tu usuario" required
                        autocomplete="username">
                    <div class="invalid-feedback">
                        <i class="fas fa-exclamation-circle"></i> Campo requerido
                    </div>
                </div>

                <div class="form-group">
                    <label for="clave" class="form-label">
                        <i class="fas fa-lock"></i> Contraseña
                    </label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="clave" placeholder="Ingresa tu contraseña"
                            required autocomplete="current-password">
                        <span class="input-group-text" onclick="togglePassword()" title="Mostrar/Ocultar contraseña">
                            <i class="fas fa-eye" id="toggleIcon"></i>
                        </span>
                    </div>
                    <div class="invalid-feedback">
                        <i class="fas fa-exclamation-circle"></i> Campo requerido
                    </div>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="recordar">
                    <label class="form-check-label" for="recordar">
                        <i class="fas fa-remember"></i> Recordar mis datos
                    </label>
                </div>

                <button type="submit" class="btn btn-login">
                    <i class="fas fa-rocket"></i> Ingresar
                </button>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/login.js"></script>
</body>
</html>