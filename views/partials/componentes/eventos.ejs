<div class="events-section">
    <h1 class="section-title">EVENTOS DESTACADOS</h1>
    <div class="events-grid" id="eventsGrid">
        <% Eventos.forEach((evento, index)=> { %>
            <div class="event-card" onclick="handleEventClick('<%= evento.titulo %>')">
                <img src="<%= evento.url %>" alt="<%= evento.titulo %>" class="event-card-image">
                <div class="event-card-content">
                    <h3 class="event-card-title"><%= evento.titulo %></h3>
                    <div class="event-card-date"><%= evento.fechaHora %></div>
                    <div class="event-card-location"><%= evento.ubicacion %></div>
                    <button class="event-card-button" onclick="buyTicket('<%= evento.id %>')" >ðŸŽ« Comprar Entradas</button>
                </div>
            </div>
        <% }) %>
    </div>
</div>