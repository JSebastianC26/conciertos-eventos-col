<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/encabezados.ejs'); %>
    <style>
        .header {
            text-align: center;
            color: white;
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 2.5rem;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .main-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            align-items: start;
        }

        .event-card {
            background: white;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }

        .event-image {
            width: 70%;
            border-radius: 15px;
            margin-bottom: 20px;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            font-weight: bold;
        }

        .event-image::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
        }

        .event-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .event-date {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #666;
            margin-bottom: 5px;
        }

        .event-location {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #666;
            margin-bottom: 15px;
        }

        .event-price {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 1.3rem;
            font-weight: bold;
            color: #4CAF50;
        }

        .purchase-card {
            background: white;
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }

        .purchase-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #333;
        }

        .quantity-selector {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
        }

        .quantity-btn {
            width: 40px;
            height: 40px;
            border: none;
            border-radius: 50%;
            background: #2196F3;
            color: white;
            font-size: 1.2rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background 0.3s;
        }

        .quantity-btn:hover {
            background: #1976D2;
        }

        .quantity-display {
            font-size: 1.2rem;
            font-weight: bold;
            min-width: 30px;
            text-align: center;
        }

        .location-selector {
            margin-bottom: 20px;
        }

        .location-select {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1rem;
            background: white;
            cursor: pointer;
        }

        .location-select:focus {
            border-color: #2196F3;
            outline: none;
        }

        .price-summary {
            background: linear-gradient(135deg, #FF9800, #F57C00);
            border-radius: 15px;
            padding: 20px;
            color: white;
            margin-bottom: 20px;
        }

        .price-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
        }

        .price-row.total {
            font-size: 1.3rem;
            font-weight: bold;
            border-top: 1px solid rgba(255,255,255,0.3);
            padding-top: 12px;
            margin-top: 12px;
        }

        .security-notice {
            background: #E3F2FD;
            border-left: 4px solid #2196F3;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 0.9rem;
            color: #1976D2;
        }

        .security-notice strong {
            color: #0D47A1;
        }

        .payment-btn {
            width: 100%;
            padding: 15px;
            background: #4CAF50;
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s;
        }

        .payment-btn:hover {
            background: #45a049;
        }

        .footer {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: #2c3e50;
            color: white;
            padding: 15px;
            text-align: center;
            font-size: 0.9rem;
            z-index: 1000;
        }

        .whatsapp-btn {
            position: fixed;
            bottom: 80px;
            right: 20px;
            background: #25D366;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 15px 20px;
            cursor: pointer;
            box-shadow: 0 4px 12px rgba(37, 211, 102, 0.4);
            font-weight: bold;
            z-index: 1001;
        }

        @media (max-width: 768px) {
            .main-content {
                grid-template-columns: 1fr;
            }
            
            .header h1 {
                font-size: 2rem;
            }
            
            body {
                padding: 10px;
                padding-bottom: 100px;
            }
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <%- include('partials/notasMusicales.ejs'); %>
    <nav class="navbar navbar-expand-lg navbar-dark custom-navbar sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-music"></i>
                <%= name %>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
    <h1 class="section-title">COMPRAR ENTRADAS</h1>
    <div class="main-content">
        <div class="event-card">
            <div class="event-image" id="eventImage">
                <img src="<%= Evento.imagenLocalidades %>" alt="<%= Evento.artista %>" class="event-image" 
                    onerror="this.src='/img/placeholder.jpg'">
            </div>
                <h2 class="event-title" id="eventTitle"><%= Evento.titulo %></h2>
                <div class="event-date" id="eventDate">
                    üìÖ <span><%= Evento.fechaHora %></span>
                </div>
                <div class="event-location" id="eventLocation">
                    üìç <span><%= Evento.ubicacion %></span>
                </div>
<% const minPrice = Math.min(...Evento.localidades.map(l => l.precio)).toLocaleString(); %>
                <div class="event-price" id="eventPrice">
                    üí∞ <span>Precio desde</span> <%= minPrice %>
                </div>
            </div>

            <div class="purchase-card">
                <h2 class="purchase-title">Datos de Compra</h2>

                <div class="form-group" id="locationGroup">
                    <label class="form-label">Seleccionar Localidad:</label>
                    <select class="location-select" id="locationSelector">
                        <option value="">Selecciona una localidad</option>
                        <% Evento.localidades.forEach((localidad, index)=> { %>
                            <option value="<%= index %>"><%= localidad.nombre %> - $<%= localidad.precio.toLocaleString() %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Cantidad de Entradas *</label>
                    <div class="quantity-selector">
                        <button class="quantity-btn" onclick="changeQuantity(-1)">‚àí</button>
                        <span class="quantity-display" id="quantity">1</span>
                        <button class="quantity-btn" onclick="changeQuantity(1)">+</button>
                    </div>
                </div>

                <div class="price-summary">
                    <div class="price-row">
                        <span>Precio por entrada:</span>
                        <span id="unitPrice">$0</span>
                    </div>
                    <div class="price-row">
                        <span>Cantidad:</span>
                        <span id="quantityDisplay">1</span>
                    </div>
                    <div class="price-row">
                        <span>Subtotal:</span>
                        <span id="subtotal">$0</span>
                    </div>
                    <div class="price-row total">
                        <span>Total a Pagar:</span>
                        <span id="total">$0</span>
                    </div>
                </div>

                <div class="security-notice">
                    üîí <strong>Transacci√≥n Segura:</strong> Cuanto hagas el pago anexar el comprobante de pago por WhatsApp para env√≠o de las boletas.
                </div>

                <button class="payment-btn" onclick="goToPayment()">
                    IR A M√âTODOS DE PAGO
                </button>
            </div>
        </div>


    <%- include('partials/whatsapp.ejs'); %>
    <%- include('partials/footer.ejs'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener("scroll", () => {
            const scrolled = window.pageYOffset;
            const parallax = document.querySelector(".main-header");
            const speed = scrolled * 0.5;
            if (parallax) {
                parallax.style.transform = `translateY(${speed}px)`;
            }
        });

        function buyTicket(eventId) {
            window.location.href = `/entradas?id=${eventId}`;
        }
    </script>
    <script>
        const evento = <%- JSON.stringify(Evento) %>;
        const currentEvent = { localidades: <%- JSON.stringify(Evento.localidades) %>};
        let currentLocation = null;
        let quantity = 1;

        locationSelector.addEventListener('change', function () {
            const locationIndex = parseInt(this.value);
            if (!isNaN(locationIndex)) {
                currentLocation = currentEvent.localidades[locationIndex];
            } else {
                currentLocation = null;
            }
            updateDisplay();
        });

        // Cambiar cantidad
        function changeQuantity(delta) {
            const newQuantity = quantity + delta;
            if (newQuantity >= 1 && newQuantity <= 10) {
                quantity = newQuantity;
                document.getElementById('quantity').textContent = quantity;
                document.getElementById('quantityDisplay').textContent = quantity;
                updateDisplay();
            }
        }

        // Actualizar precios
        function updateDisplay() {
            const unitPriceElement = document.getElementById('unitPrice');
            const subtotalElement = document.getElementById('subtotal');
            const totalElement = document.getElementById('total');

            if (currentLocation) {
                const unitPrice = currentLocation.precio;
                const subtotal = unitPrice * quantity;
                const serviceFee = 0;
                const total = subtotal + serviceFee;

                unitPriceElement.textContent = `$${unitPrice.toLocaleString()}`;
                subtotalElement.textContent = `$${subtotal.toLocaleString()}`;
                totalElement.textContent = `$${total.toLocaleString()}`;
            } else {
                unitPriceElement.textContent = '$0';
                subtotalElement.textContent = '$0';
                totalElement.textContent = '$0';
            }
        }

        // Ir a m√©todos de pago
        function goToPayment() {
            if (!currentEvent || !currentLocation) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Falta informaci√≥n',
                    text: 'Por favor selecciona un evento y una localidad'
                });
                return;
            }

            const total = (currentLocation.precio * quantity) + 4500;

            Swal.fire({
                title: 'RECUERDE!',
                html: `
                    <strong>Para la entrega de boletas, debe enviar el comprobante por la linea de WhatsApp</strong><br><br><br>
                    <strong>Evento:</strong> ${evento.titulo}<br>
                    <strong>Localidad:</strong> ${currentLocation.nombre}<br>
                    <strong>Cantidad:</strong> ${quantity}<br>
                    <strong>Total:</strong> $${total.toLocaleString()}<br><br>
                    Ser√°s redirigido a los m√©todos de pago.
                `,
                icon: 'info',
                confirmButtonText: 'Aceptar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `https://consultascol.com.co/public/metodos_pago_sl`;
                }
            });
        }

        
    </script>
</body>
</html>